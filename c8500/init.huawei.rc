on post-fs

    mkdir /data/misc/wifi/sockets 0770 wifi wifi    
    mkdir /data/misc/dhcp 0770 dhcp dhcp

    mkdir /data/local 0777 radio shell
    mkdir /data/local/tmp 0777 radio shell
    chown radio shell /data/local
    chown radio shell /data/local/tmp
    mkdir /data/sdext2
   
on boot
    
    chown bluetooth bluetooth /sys/class/rfkill/rfkill0/state
    chown bluetooth bluetooth /sys/class/rfkill/rfkill0/type
    chmod 0660                /sys/class/rfkill/rfkill0/state
    chown bluetooth bluetooth /proc/bluetooth/sleep/proto
    chmod 0660 /proc/bluetooth/sleep/proto
    
    chmod 0666 /dev/accel
    chmod 0666 /dev/akm8973_aot
    chmod 0666 /dev/akm8973_dev
    chmod 0666 /dev/light
    chmod 0666 /dev/proximity

# cpufreq configurations
    busybox mkdir -p /sys/devices/system/cpu/cpu0/cpufreq
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 49152
    #write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 722880
    #write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 672000
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 600000
    #write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 480000

    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor ondemand
    write /sys/devices/system/cpu/cpufreq/ondemand/sampling_rate 50000
    write /sys/devices/system/cpu/cpufreq/ondemand/up_threshold 90
    write /sys/devices/system/cpu/cpufreq/ondemand/down_threshold 60
    write /sys/devices/system/cpu/cpufreq/ondemand/powersave_bias 25

    #added by george,2011-10-20
    #/sys/devices/system/cpu/cpu0/cpufreq/scaling_available_governors conservative ondemand userspace powersave performance 
    #write /sys/devices/system/cpu/cpu0/cpufreq/scaling_available_frequencies 480000 600000 614000 633000 652000 672000

    # Increase read throughput from sd card
    write /sys/block/mmcblk0/bdi/read_ahead_kb 2048
        
    chmod 0777 /sys/kernel/logger/log_events/enable
    chmod 0777 /sys/kernel/logger/log_main/enable
    chmod 0777 /sys/kernel/logger/log_main/priority
    chmod 0777 /sys/kernel/logger/log_radio/enable
    chmod 0777 /sys/kernel/logger/log_radio/priority

    write /sys/module/lowmemorykiller/parameters/minfree 2560,4096,6144,12288,14336,18432
    write /sys/module/lowmemorykiller/parameters/adj 0,1,2
    write /sys/module/lowmemorykiller/parameters/check_filepages 1

    # SD card polling
    chown system system /sys/module/g_android/parameters/product_id
    chown system system /sys/devices/platform/msm_sdcc.1/polling
    chown system system /sys/devices/platform/msm_sdcc.2/polling
    chown system system /sys/devices/platform/android_usb/composition
    chown system system /sys/devices/platform/android_usb/remote_wakeup

    # Enable MASS storage on SDCARD
    write /sys/devices/platform/mass_storage/lun0/file /dev/block/mmcblk0p1
    write /sys/bus/platform/drivers/msm_sdcc/msm_sdcc.1/polling 1
    write /sys/bus/platform/drivers/msm_sdcc/msm_sdcc.2/polling 1

    chmod 0667 /dev/graphics/fb0

service qmuxd /system/bin/qmuxd
    
service hciattach /system/bin/sh /system/etc/init.qcom.bt.sh
    user bluetooth
    group qcom_oncrpc bluetooth net_bt_admin system
    disabled
    oneshot
    

# HUAWEI WPA SETTING
service wpa_supplicant /system/bin/wpa_supplicant -Dwext -ieth0 -W -c /data/misc/wifi/wpa_supplicant.conf
    socket wpa_eth0 dgram 660 wifi wifi
    group system wifi inet dhcp
    disabled
    oneshot 

service load_wifi /system/bin/load_wifi
    disabled
    oneshot

service dhcpcd_eth0 /system/bin/dhcpcd -ABKL eth0
    disabled
    oneshot

service oem_rpc_svc /system/bin/oem_rpc_svc
    oneshot
    
service akmd /system/bin/akmd2
    user compass
    group compass misc input
    disabled

service akm8975 /system/bin/akmd8975
    user compass
    group compass misc input
    disabled

service akm8962 /system/bin/akmd8962
    user compass
    group compass misc input
    disabled
# bugreport is triggered by the KEY_VOLUMEUP and KEY_CENTER keycodes
service bugreport /system/bin/dumpstate -d -v -o /sdcard/bugreports/bugreport
    disabled
    oneshot
    keycodes 115 232

